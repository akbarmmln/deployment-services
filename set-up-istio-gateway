--> kubectl create secret tls istio-ingressgateway-certs -n istio-system --key client.key --cert client.crt

apiVersion: networking.istio.io/v1beta1
kind: Gateway
metadata:
  name: mesh-gateway
  namespace: sit
spec:
  selector:
    istio: ingressgateway
  servers:
  - hosts:
    - istio-sit.exops.my.id
    - kube-dashboard.exops.my.id
    port:
      name: http
      number: 80
      protocol: HTTP
  - hosts:
    - istio-sit.exops.my.id
    - kube-dashboard.exops.my.id
    port:
      name: https
      number: 443
      protocol: HTTPS
    tls:
      mode: SIMPLE
      privateKey: /etc/istio/ingressgateway-certs/tls.key
      serverCertificate: /etc/istio/ingressgateway-certs/tls.crt
